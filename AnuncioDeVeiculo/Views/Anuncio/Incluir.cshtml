@model AnuncioDeVeiculo.ViewModels.AnuncioViewModel

@{
    ViewBag.Title = "Incluir";
}

<br />
<h4>Novo Anúncio</h4>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
